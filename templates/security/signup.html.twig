{% extends 'base.html.twig' %}

{% block title %} {{ 'Sign Up!'|trans }}{% endblock %}

{% block body %}
    <p>{{ 'Register now'|trans }}</p>
    {{ form_start(form, {'action': path('signup'), 'method' : 'POST'}) }}
        <div>
            {{ form_row(form.email) }}
        </div>
        <div>
            {{ form_row(form.password) }}
        </div>
        <div>
            {{ form_row(form.passwordRepeat) }}
        </div>
        <div>
            <button class="btn btn-lg btn-primary" type="submit">
                Sign Up
            </button>
        </div>
        <a href="{{ path('app_login') }}">Login page</a>
    {{ form_end(form) }}


{% endblock %}
